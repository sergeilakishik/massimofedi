{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint-config-airbnb"
    ],
    "rules": {
        "no-undef": 0,
        "no-new": 0,
        "no-underscore-dangle": 0,
        "arrow-body-style": 0,
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "max-len": [2, 160, 2, { "ignoreUrls": true, "ignoreComments": true }],
        "comma-dangle": [2, {
            "arrays": "never",
            "objects": "always",
            "imports": "always",
            "exports": "always",
            "functions": "ignore"
        }],
        "no-else-return": 0,
        "import/no-dynamic-require": 0,
        "no-return-assign": 0,
        "func-names": 0,
        "global-require": 0,
        "no-param-reassign": 0,
        "new-cap": 0,
        "class-methods-use-this": 0,
        "no-throw-literal": 0,
        "no-restricted-syntax": 0,
        "no-console": 0,
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
